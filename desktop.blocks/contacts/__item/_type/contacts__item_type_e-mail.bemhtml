block('contacts').elem('item').elemMod('type', 'e-mail')(

    content()(function() {
        var c = this.ctx.content;
        return [
            {
                block: this.block,
                elem: 'label',
                content: c.label
            },
            {
                block: 'link',
                mix: { block: this.block, elem: 'value' },
                url: 'mailto:' + c.value,
                content: c.value
            }
        ]
    })

)